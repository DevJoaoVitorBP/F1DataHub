@page
@model F1DataHub.Apresentation.Pages.Seasons.IndexModel
@{
    ViewData["Title"] = "Temporadas";
}

<div class="container-fluid py-3 season-section">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h5 class="mb-1">Explorar temporadas</h5>
            <small class="text-secondary">Navegue por todos os anos da Fórmula 1, veja campeões, corridas e status de cada etapa.</small>
        </div>
        <div class="d-flex gap-2">
            
            <button class="btn btn-outline-secondary btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="none" stroke="#544f4f" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-2M7 11l5 5l5-5m-5-7v12" /></svg>
                Exportar temporada</button>
            <button class="btn btn-danger btn-sm">
                <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M5 5v14a2 2 0 0 0 2.75 1.84L20 13.74a2 2 0 0 0 0-3.5L7.75 3.14A2 2 0 0 0 5 4.89" fill="none" stroke="#544f4f" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /></svg>
                Ir para temporada atual</button>
        </div>
    </div>

    <div class="row g-3">
        <!-- Sidebar: Seasons list -->
        <div class="col-12 col-xl-3">
            <div class="card season-card h-100">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Temporadas</h6>
                    <small class="text-secondary d-block mb-2">Selecione um ano para ver detalhes.</small>

                    <div class="input-group input-group-sm mb-2">
                        <span class="input-group-text bg-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                                <path fill="#544f4f"
                                      d="M19.5 4h-3V2.5a.5.5 0 0 0-1 0V4h-7V2.5a.5.5 0 0 0-1 0V4h-3A2.503 2.503 0 0 0 2 6.5v13A2.503 2.503 0 0 0 4.5 22h15a2.5 2.5 0 0 0 2.5-2.5v-13A2.5 2.5 0 0 0 19.5 4M21 19.5a1.5 1.5 0 0 1-1.5 1.5h-15A1.5 1.5 0 0 1 3 19.5V11h18zm0-9.5H3V6.5C3 5.672 3.67 5 4.5 5h3v1.5a.5.5 0 0 0 1 0V5h7v1.5a.5.5 0 0 0 1 0V5h3A1.5 1.5 0 0 1 21 6.5z" />
                            </svg>
                        </span>

                        <input type="text" class="form-control" placeholder="Buscar por ano (ex: 2010)">
                    </div>


                    <div class="season-list">
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action season-item active" href="#">
                                <div class="d-flex justify-content-between text-black"><strong>2024</strong><small class="text-secondary">23 corridas</small></div>
                                <div class="small text-secondary">Líder pilotos: Verstappen · Construtores: Red Bull</div>
                            </a>
                            <a class="list-group-item list-group-item-action season-item" href="#">
                                <div class="d-flex justify-content-between"><strong>2023</strong><small class="text-secondary">22 corridas</small></div>
                                <div class="small text-secondary">Campeão: Verstappen · Construtores: Red Bull</div>
                            </a>
                            <a class="list-group-item list-group-item-action season-item" href="#">
                                <div class="d-flex justify-content-between"><strong>2022</strong><small class="text-secondary">22 corridas</small></div>
                                <div class="small text-secondary">Campeão: Verstappen · Construtores: Red Bull</div>
                            </a>
                            <a class="list-group-item list-group-item-action season-item" href="#">
                                <div class="d-flex justify-content-between"><strong>2021</strong><small class="text-secondary">22 corridas</small></div>
                                <div class="small text-secondary">Campeão: Verstappen · Construtores: Mercedes</div>
                            </a>
                            <a class="list-group-item list-group-item-action season-item" href="#">
                                <div class="d-flex justify-content-between"><strong>2020</strong><small class="text-secondary">17 corridas</small></div>
                                <div class="small text-secondary">Campeão: Hamilton · Construtores: Mercedes</div>
                            </a>
                            <!-- ... mais anos ... -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="col-12 col-xl-9">
            <!-- Season summary -->
            <div class="card season-card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h6 class="mb-1">Temporada 2024</h6>
                            <small class="text-secondary">Resumo de campeonatos, número de corridas e status atual da temporada selecionada.</small>
                        </div>
                        <div class="text-end">
                            <small class="text-secondary">Último sync há 5 min</small>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="season-card-resume col-12 col-md-4">
                            <small class="text-secondary d-block">Campeão de Pilotos</small>
                            <div class="fw-semibold">Max Verstappen</div>
                            <small class="text-secondary">Red Bull Racing · 255 pts</small>
                        </div>
                        <div class="season-card-resume col-12 col-md-4">
                            <small class="text-secondary d-block">Líder Construtores</small>
                            <div class="fw-semibold">Red Bull Racing</div>
                            <small class="text-secondary">412 pts · 11 vitórias</small>
                        </div>
                        <div class="season-card-resume col-12 col-md-2">
                            <small class="text-secondary d-block">Corridas</small>
                            <div class="fw-semibold">14 / 23</div>
                            <small class="text-secondary">14 concluídas · 9 futuras</small>
                        </div>
                        <div class="season-card-resume col-12 col-md-2">
                            <small class="text-secondary d-block">Status da temporada</small>
                            <div class="fw-semibold">Em andamento</div>
                            <small class="text-secondary">Próxima: GP de Monza</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calendar table -->
            <div class="card season-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div>
                            <h6 class="mb-1">Calendário da temporada</h6>
                            <small class="text-secondary">Tabela de corridas de 2024 com datas, local e status em tempo quase real.</small>
                        </div>
                        <div class="d-flex gap-2 flex-wrap">
                            <div class="btn-group btn-group-sm" role="group">
                                <button class="btn btn-outline-secondary active">Todas</button>
                                <button class="btn btn-outline-secondary">Concluídas</button>
                                <button class="btn btn-outline-secondary">Próximas</button>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">Mostrar sessões</button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">Treinos</a></li>
                                    <li><a class="dropdown-item" href="#">Qualificação</a></li>
                                    <li><a class="dropdown-item" href="#">Sprint</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr class="text-secondary">
                                    <th>Rnd</th>
                                    <th>Grande Prêmio</th>
                                    <th>Data</th>
                                    <th>Local</th>
                                    <th>Status</th>
                                    <th>Vencedor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>11</td>
                                    <td>
                                        <div class="fw-semibold">GP da Áustria</div>
                                        <small class="text-secondary">Red Bull Ring</small>
                                    </td>
                                    <td>30 Jun 2024 · 15:00</td>
                                    <td>Spielberg · Áustria</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                    <td>M. Verstappen</td>
                                </tr>
                                <tr>
                                    <td>12</td>
                                    <td>
                                        <div class="fw-semibold">GP da Grã-Bretanha</div>
                                        <small class="text-secondary">Silverstone Circuit</small>
                                    </td>
                                    <td>07 Jul 2024 · 15:00</td>
                                    <td>Silverstone · Reino Unido</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                    <td>L. Hamilton</td>
                                </tr>
                                <tr>
                                    <td>13</td>
                                    <td>
                                        <div class="fw-semibold">GP da Hungria</div>
                                        <small class="text-secondary">Hungaroring</small>
                                    </td>
                                    <td>21 Jul 2024 · 15:00</td>
                                    <td>Budapeste · Hungria</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                    <td>L. Norris</td>
                                </tr>
                                <tr>
                                    <td>14</td>
                                    <td>
                                        <div class="fw-semibold">GP da Bélgica</div>
                                        <small class="text-secondary">Circuit de Spa-Francorchamps</small>
                                    </td>
                                    <td>28 Jul 2024 · 15:00</td>
                                    <td>Spa · Bélgica</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                    <td>M. Verstappen</td>
                                </tr>
                                <tr>
                                    <td>15</td>
                                    <td>
                                        <div class="fw-semibold">GP da Itália</div>
                                        <small class="text-secondary">Autodromo Nazionale Monza</small>
                                    </td>
                                    <td>08 Set 2024 · 15:00</td>
                                    <td>Monza · Itália</td>
                                    <td><span class="badge bg-warning text-dark">Upcoming</span></td>
                                    <td>—</td>
                                </tr>
                                <tr>
                                    <td>16</td>
                                    <td>
                                        <div class="fw-semibold">GP de Singapura</div>
                                        <small class="text-secondary">Marina Bay Street Circuit</small>
                                    </td>
                                    <td>22 Set 2024 · 20:00</td>
                                    <td>Singapura · Singapura</td>
                                    <td><span class="badge bg-warning text-dark">Upcoming</span></td>
                                    <td>—</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <small class="text-secondary d-block mt-2">Clique em uma corrida para abrir detalhes completos: mapa de pista, sessões e resultados.</small>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3 small text-secondary">
        <span>Construído sobre dados públicos de temporada · Layout protótipo</span>
        <span>Dados por f1api.dev</span>
    </div>
</div>
