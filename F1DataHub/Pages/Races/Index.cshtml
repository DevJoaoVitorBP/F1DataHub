@page
@model F1DataHub.Apresentation.Pages.Races.IndexModel
@{
    ViewData["Title"] = "Corridas";
}

<div class="container-fluid races-simple py-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
        <div class="flex-grow-1">
            <div class="text-secondary text-uppercase small fw-semibold">Calendário de corridas</div>
            <h2 class="mb-1">Calendário de corridas</h2>
        </div>
    </div>

    <div class="card races-panel mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-12 col-md-4">
                    <div class="text-secondary text-uppercase small fw-semibold mb-1">Temporada</div>
                    <div class="btn-group races-season-dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">2024</button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" data-year="2025">2025</a></li>
                            <li><a class="dropdown-item" href="#" data-year="2024">2024</a></li>
                            <li><a class="dropdown-item" href="#" data-year="2023">2023</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-12 col-md-8">
                    <div class="text-secondary text-uppercase small fw-semibold mb-1 text-md-end">Status</div>
                    <div class="d-flex gap-2 flex-wrap justify-content-md-end" id="raceStatusChips">
                        <button class="chip-filter active" data-filter="all">Todas</button>
                        <button class="chip-filter" data-filter="completed">Concluídas</button>
                        <button class="chip-filter" data-filter="upcoming">Próximas</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card races-table">
        <div class="card-body">
            <div class="d-flex justify-content-between flex-wrap gap-2 align-items-start mb-3">
                <div>
                    <div class="text-uppercase small fw-semibold mb-1">Corridas da temporada</div>
                    <p class="text-secondary small mb-0">Tabela simples com rodada, GP, circuito, data e status. Ideal para a primeira versão do projeto.</p>
                </div>
                <small class="text-secondary">Exemplo com 6 corridas</small>
            </div>

            <div class="table-responsive">
                <table class="table table-borderless align-middle races-simple-table">
                    <thead>
                        <tr class="text-secondary">
                            <th scope="col" class="small">#</th>
                            <th scope="col" class="small">Grande Prêmio</th>
                            <th scope="col" class="small">Circuito</th>
                            <th scope="col" class="small">Data</th>
                            <th scope="col" class="small text-end">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-race-row data-status="completed">
                            <td>11</td>
                            <td>GP da Áustria</td>
                            <td>Red Bull Ring</td>
                            <td>30 Jun 2024</td>
                            <td class="text-end"><span class="badge status-pill bg-success-subtle text-success">COMPLETED</span></td>
                        </tr>
                        <tr data-race-row data-status="completed">
                            <td>12</td>
                            <td>GP da Grã-Bretanha</td>
                            <td>Silverstone Circuit</td>
                            <td>07 Jul 2024</td>
                            <td class="text-end"><span class="badge status-pill bg-success-subtle text-success">COMPLETED</span></td>
                        </tr>
                        <tr data-race-row data-status="completed">
                            <td>13</td>
                            <td>GP da Hungria</td>
                            <td>Hungaroring</td>
                            <td>21 Jul 2024</td>
                            <td class="text-end"><span class="badge status-pill bg-success-subtle text-success">COMPLETED</span></td>
                        </tr>
                        <tr data-race-row data-status="completed">
                            <td>14</td>
                            <td>GP da Bélgica</td>
                            <td>Spa-Francorchamps</td>
                            <td>28 Jul 2024</td>
                            <td class="text-end"><span class="badge status-pill bg-success-subtle text-success">COMPLETED</span></td>
                        </tr>
                        <tr data-race-row data-status="upcoming">
                            <td>15</td>
                            <td>GP da Itália</td>
                            <td>Monza</td>
                            <td>08 Set 2024</td>
                            <td class="text-end"><span class="badge status-pill bg-warning text-dark">UPCOMING</span></td>
                        </tr>
                        <tr data-race-row data-status="upcoming">
                            <td>16</td>
                            <td>GP de Singapura</td>
                            <td>Marina Bay</td>
                            <td>22 Set 2024</td>
                            <td class="text-end"><span class="badge status-pill bg-warning text-dark">UPCOMING</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between flex-wrap gap-2 mt-4 text-secondary small">
        <span>Construído sobre dados públicos de temporada · Layout simplificado</span>
        <span>Dados por f1api.dev</span>
    </div>
</div>
